{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "consistent-return": "off",
    "padded-blocks": "off",
    "prefer-arrow-callback": "off",
    "comma-dangle": "off",
    "no-plusplus": "off"
  }
}